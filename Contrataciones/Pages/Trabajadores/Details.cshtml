@page
@model Contrataciones.Pages.Trabajadores.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Trabajador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.TipoIdentificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.TipoIdentificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.NumIdentificacion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.NumIdentificacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.PrimerNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.PrimerNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.SegundoNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.SegundoNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.PrimerApellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.PrimerApellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.SegundoApellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.SegundoApellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.FechaNacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.FechaNacimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.edad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Trabajador.edad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Trabajador.Contratos)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Entidad</th>
                    <th>Numero Contrato</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Finalizacion</th>
                </tr>
                @foreach (var item in Model.Trabajador.Contratos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEntidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NumeroContrato)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFinal)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Trabajador.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
