@page
@model Contrataciones.Pages.Contratos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Contrato[0].NombreEntidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato[0].NumeroContrato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato[0].FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato[0].FechaFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contrato[0].Trabajador)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Contrato) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreEntidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroContrato)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trabajador.ID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ContratoID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ContratoID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ContratoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
