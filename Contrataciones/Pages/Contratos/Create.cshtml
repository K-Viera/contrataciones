@page
@model Contrataciones.Pages.Contratos.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Contrato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Contrato.NombreEntidad" class="control-label"></label>
                <input asp-for="Contrato.NombreEntidad" class="form-control" />
                <span asp-validation-for="Contrato.NombreEntidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrato.NumeroContrato" class="control-label"></label>
                <input asp-for="Contrato.NumeroContrato" class="form-control" />
                <span asp-validation-for="Contrato.NumeroContrato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrato.TrabajadorID" class="control-label"></label>
                <select asp-for="Contrato.TrabajadorID" class ="form-control" asp-items="ViewBag.TrabajadorID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Contrato.FechaInicio" class="control-label"></label>
                <input asp-for="Contrato.FechaInicio" class="form-control" />
                <span asp-validation-for="Contrato.FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrato.FechaFinal" class="control-label"></label>
                <input asp-for="Contrato.FechaFinal" class="form-control" />
                <span asp-validation-for="Contrato.FechaFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
